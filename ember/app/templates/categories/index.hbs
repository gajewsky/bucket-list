<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>#Challenges</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |category|}}
      <tr>
        <td>{{category.title}}</td>
        <td>{{category.description}}</td>
        <td>{{category.challenges.length}}</td>
        <td>
          {{#link-to 'categories.show' category}}Details{{/link-to}}
          |
          {{#link-to 'categories.edit' category}}Edit{{/link-to}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="5" style="text-align: center; font-style: italic">
          You have no categories yet.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
